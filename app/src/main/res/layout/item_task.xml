<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_item_task"
        android:src="@drawable/flag"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/txt_title_item_task"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/image_item_task"
        android:layout_alignTop="@id/image_item_task"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_item_task"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/txt_title_item_task"
        android:layout_toRightOf="@id/image_item_task"
        android:text="@string/one"
        android:textColor="@color/red" />

</RelativeLayout>